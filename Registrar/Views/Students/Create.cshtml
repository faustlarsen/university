@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h4>Add a new student</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.StudentName)
  @Html.TextBoxFor(model => model.StudentName)
  
  @Html.LabelFor(model => model.DateOfEnrollement.Date)
  @Html.EditorFor(model => model.DateOfEnrollement, "{0:MM/dd/yyyy}")
  @* @Html.TextBoxFor(model => model.DateOfEnrollement.Date, new {@type = "date", @Value=Model.DateOfEnrollement.ToString("yyy-MM-dd")}) *@
  
  @Html.Label("Select course")
  @Html.DropDownList("CourseId")

  <input type="submit" value="Add new student" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all students", "Index")</p>
