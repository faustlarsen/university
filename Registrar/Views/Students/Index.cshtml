@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>;

<h1>Students</h1>
<form>
    <i class="glyphicon glyphicon-search"></i><input type="text" name="StudentSearch" placeholder="search and press enter">
</form>

@if (@Model.Count == 0)
{
    <h3>No students have been added.</h3>
}

@foreach (Student student in Model)
{
    <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId }) | @student.DateOfEnrollement</li> 
}

<p>@Html.ActionLink("Add new student", "Create")</p>
<strong><p>@Html.ActionLink("Delete All students", "DeleteAll")</p></strong>